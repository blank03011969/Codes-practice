    printf("#####\n");
	printf("#\n");
	printf("####\n");
	printf("#\n");
	printf("#\n");
	printf("#\n");
	
	return 0;
}

Question 6: // WAP in C that accepts two items' weight (floating point values) and number of 
            // purchase (floating point values) and calculate the average value of the items

#include <stdio.h>

// Driver code

int main()
{
    float w1, w2, n1, n2, average;
    printf("Enter weight of first item : ");
    scanf("%f", &w1);
    
    printf("Enter weight of second item : ");
    scanf("%f", &w2);
    
    printf("Enter number of purchases for first item : ");
    scanf("%f", &n1);
    
    printf("Enter number of purchases for second item : ");
    scanf("%f", &n2);
    
    average = ( (w1*n1) + (w2*n2) ) / (n1+n2);
    
    printf("The average value of the items is : %f", average);
	
	return 0;
}

Question 7: // WAP in C to swap two numbers using a third variable

#include <stdio.h>

// Driver code

int main()
{
    int a, b, temp;
    printf("Enter two numbers : ");
    scanf("%d%d", &a, &b);
   
    temp=a;
    a=b;
    b=temp;
    
    printf("The numbers after swapping are : %d and %d", a, b);
	
	return 0;
}

Question 8: // WAP in C to swap two numbers without using a third variable

#include <stdio.h>

// Driver code

int main()
{
    int a, b;
    printf("Enter two numbers : ");
    scanf("%d%d", &a, &b);
   
    a = a+b;
    b = a-b;
    a = a-b;
    
    printf("The numbers after swapping are : %d and %d", a, b);
	
	return 0;
}

Question : // WAP to check whether a number is prime or not

#include <stdio.h>

int main()
{
    int a;
    printf("Enter number : ");
    scanf("%d",&a);
    
    int n = 2;
    
    while(n<a)
    {
        if(a%n==0)
        {
            printf("Not Prime");
            return 0;
        }
        else
        {
            n=n+1;
        }
    }
    printf("Prime");

    return 0;
}

****Question : // WAP to print prime numbers till N

#include <stdio.h>

int main()
{
    int N;
    printf("Enter number : ");
    scanf("%d",&N);
    
    int num = 2;
    while(num<=N)
    {
        int divi=2;
    while(divi<num)
    {
        if(num%divi==0)
        {
            num=num+1;
            
        }
        else
        {
            divi=divi+1;
        }
    }
    printf("%d ",num);
    num=num+1;
    }
    

    return 0;
}

Question : //WAP in C to find second largest in an array 


#include <stdio.h>

int main()
{
    int a[5];
    printf("enter numbers of array : ");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
    int second=a[0],largest=a[0];
    for(int i=1;i<5;i++)
    {
        if(a[i]>largest)
        {
        second = largest;
        largest=a[i];
        }
        
    }
    printf("second largest is : %d",second);
    
    return 0;
}

Question : //WAP in C to find smallest number in an array 

#include <stdio.h>

int main()
{
    int a[5];
    printf("enter numbers of array : ");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
    int smallest=a[0];
    for(int i=1;i<5;i++)
    {
        if(smallest>a[i])
        {
        smallest=a[i];
        }
    }
    printf("smallest number is : %d",smallest);
    
    return 0;
}

Question : //WAP in C to reverse elemnts of an array

#include <stdio.h>

int main()
{
    int a[5];
    printf("enter numbers of array : ");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("The reverse of the array is : ");
    for(int i=4;i>=0;i--)
    {
        printf("%d ",a[i]);
    }
    
    
    return 0;
}

Question : //WAP in C to make a calculator

#include <stdio.h>

int main()
{
    int a,b,choice;
    printf("enter two numbers : ");
    scanf("%d%d",&a,&b);
    printf("Choose the operation to perform\n");
    printf("1. Addition\n");
    printf("2. Subtraction\n");
    printf("3. Division\n");
    printf("4. Multiplication\n");
    scanf("%d",&choice);
    
    switch(choice)
    {
        case 1:
                printf("The sum is : %d",a+b);
                break;
        
        case 2: 
                printf("The difference is : %d",a-b);
                break;
        
        case 3: 
                printf("The quotient is : %d",a/b);
                break;
        
        case 4: 
                printf("The product is : %d",a*b);
                break;
        
    }

    return 0;
}

Question : //WAP in C to find second largest element of an array

#include <stdio.h>

int main()
{
    int a[5];
    printf("enter elements of array : ");
    for(int i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
    int second =a[0], largest = a[0];
    for(int i=0;i<5;i++)
    {
        if(a[i]>largest)
        {
            second = largest;
            largest = a[i];
        }
    }
    printf("second largest element is : %d",second);

    return 0;
}
